<div class = 'container'>

  <h1>BURGERSSSS!!!!</h1>
  <h2>eat a burger...<strong>EAT IT!!!</strong></h2>

  <div class = 'row'>
    <div class = 'col-md-6'>
      <ul>
        <h2>Devoured Burgers</h2>
        {{#each burgers}}
          {{#if devoured}}
            <li>{{burger_name}}
              <button class="btn btn-warning devour-switch" data-id="{{id}}" data-devoured="{{devoured}}">
                {{#if devoured}} Barf it up!
                  {{else}} Devour it!
                {{/if}}
              </button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class = 'col-md-6'>
      <ul>
        <h2>Burgers Yet To Be Devoured</h2>
        {{#each burgers}}
          {{#unless devoured}}
            <li>{{burger_name}}
              <button class="btn btn-warning devour-switch" data-id="{{id}}" data-devoured="{{devoured}}">
                {{#if devoured}} Barf it up!
                  {{else}} Devour it!
                {{/if}}
              </button>
              </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  

<div>

</div>
  <h3>Create a burger... <strong>HERE!!!</strong></h3>
  <form class = "burger-form">
    <div class = "form-group">
      <label for="new-burger">New Burger Name:</label>
      <textarea class = "form-control" id = "new-burger" rows = "3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
